<Window x:Class="Alphicsh.MusicRoom.View.TrackEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alphicsh.MusicRoom.View"
        mc:Ignorable="d"
        Title="TrackEditWindow" Height="360" Width="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" Margin="4">
            <!-- Basic track information -->
            <TabItem Header="Info">
                <local:PlaylistItemInfoEditControl DataContext="{Binding CopyTrack}"/>
            </TabItem>
            
            <!-- Loop information -->
            <TabItem Header="Playback">
                <local:LoopStreamProviderEditControl DataContext="{Binding CopyTrack.StreamProvider}"/>
            </TabItem>
        </TabControl>
        
        <WrapPanel Grid.Row="1" HorizontalAlignment="Right">
            <Button Margin="4" Width="64" Click="OkButton_Click">OK</Button>
            <Button Margin="4" Width="64" Click="CancelButton_Click">Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
